@model IEnumerable<RPG.Web.Models.Unit.Squad>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SquadName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platoon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SquadName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platoon.PlatoonId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SquadId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SquadId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SquadId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
