                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Height="278" Margin="276,21,0,0" VerticalAlignment="Top" Width="58" >
                    <StackPanel.Resources>

                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Margin" Value="5,10,5,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label x:Name="label513" Content="Bonus" Height="30" VerticalAlignment="Top" Width="55" />
                    <TextBox x:Name="textBox4" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
                    <TextBox x:Name="textBox_Copy20" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
