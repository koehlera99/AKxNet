                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Height="278" Margin="114,21,0,0" VerticalAlignment="Top" Width="49" >
                    <StackPanel.Resources>

                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Margin" Value="5,10,5,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label x:Name="label131" Content="Race" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="40" />
                    <TextBox x:Name="textBox1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
                    <TextBox x:Name="textBox_Copy5" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
                    <TextBox x:Name="textBox_Copy6" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
                    <TextBox x:Name="textBox_Copy7" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
