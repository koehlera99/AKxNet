            </Grid>
        </GroupBox>
        <Label x:Name="label" Content="Remaining" HorizontalAlignment="Left" Margin="445,35,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtRemaining" HorizontalAlignment="Left" Height="60" Margin="400,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="80"/>
