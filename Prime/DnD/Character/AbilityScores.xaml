                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Height="278" Margin="60,21,0,0" VerticalAlignment="Top" Width="49" >
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Margin" Value="5,10,5,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label x:Name="label13" Content="Base" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="40" />
                    <TextBox x:Name="textBox" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
                    <TextBox x:Name="textBox_Copy" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
                    <TextBox x:Name="textBox_Copy1" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
