<Window x:Class="TCS.Space.Map"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCS.Space"
        mc:Ignorable="d"
        Title="Map" Height="652" Width="889" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/PlanetMoonGalaxy.jpg"/>
        </Grid.Background>
        <Image x:Name="image" HorizontalAlignment="Left" Height="82" Margin="175,400,0,0" VerticalAlignment="Top" Width="120" Source="Images/Dash.jpg" RenderTransformOrigin="0.5,0.5" OpacityMask="Black" IsManipulationEnabled="True" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
