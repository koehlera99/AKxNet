<Window x:Class="UrhoSharp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrhoSharp.Wpf"
        xmlns:wpf="clr-namespace:Urho.Extensions.Wpf;assembly=Urho.Extensions.Wpf"
        xmlns:gui="clr-namespace:Urho.Gui;assembly=Urho"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="Yes" Height="800" Width="1214.4" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="850*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="850*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <wpf:UrhoSurface x:Name="UrhoSurface" Grid.Column="1" Grid.Row="1" Margin="0,0,0,0.4" />
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button Content="Button" Background="#FF963232" Height="25"/>
            <Button Content="Supe button" Background="#FF165B74" Height="25" />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" />




    </Grid>
</Window>